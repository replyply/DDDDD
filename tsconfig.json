{
  "include": ["src/**/*.ts"],
  "exclude": ["src/**/__test__", "src/**/__mocks__"],
  "compilerOptions": {
    "module": "CommonJS",
    "moduleResolution": "node",
    "target": "ES2021",
    "lib": ["ESNext"],
    "strict": true,
    "alwaysStrict": true,
    "removeComments": true,
    "pretty": true,
    "sourceMap": true,
    "inlineSources": true,
    "outDir": "dist",
    "allowJs": false,
    "declaration": true,
    "declarationMap": true,
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "incremental": true,
    "esModuleInterop": true
  }
}
